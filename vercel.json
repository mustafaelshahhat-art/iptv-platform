{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/stream/(.*)",
            "dest": "/api/index.js"
        },
        {
            "src": "/movies",
            "dest": "/public/movies.html"
        },
        {
            "src": "/series",
            "dest": "/public/series.html"
        },
        {
            "src": "/live",
            "dest": "/public/live.html"
        },
        {
            "src": "/player",
            "dest": "/public/player.html"
        },
        {
            "src": "/(.*\\.(js|css|jpg|jpeg|png|gif|svg|ico|woff|woff2))",
            "dest": "/public/$1"
        },
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "IPTV_SERVER_URL": "@iptv_server_url",
        "IPTV_USERNAME": "@iptv_username",
        "IPTV_PASSWORD": "@iptv_password"
    }
}